<%= form_for(@idea) do |f| %>
<% if @idea.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

  <ul>
    <% @idea.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>


<%= f.label :title %>
<%= f.text_field :title, :class => 'input-xxlarge' %>

<%= f.label :description %>
<%= f.text_area :description, :class => 'input-xxlarge', :rows => '10' %>


<% if @idea.id %>

<%= f.label :status %>
<%= collection_select('idea', 'status', Idea::ALL_STATUS, :first, :last) %>

<div class="row">
  <div class="span2">
    <%= f.label :positive %>
    <%= f.text_field :positive, :disabled => true, :class => 'input-small' %>
  </div>
  <div class="span2">
    <%= f.label :negative %>
    <%= f.text_field :negative, :disabled => true, :class => 'input-small' %>
  </div>
</div>

<%= f.label :created_date %>
<%= f.text_field :created_date, :disabled => true %>

<% end %>

<div class="form-actions">
  <%= f.submit :class => 'btn btn-primary' %>
 
  <% if current_page?(url_for(:controller => 'ideas', :action => 'edit')) %>
  <%= link_to 'Show', @idea, :class => 'btn btn' %>
  <% end %>

  <%= link_to 'Back', ideas_path, :class => 'btn' %>
</div>
<% end %>
