
<ul class="breadcrumb">
  <li><a href="/ideas/">Ideas </a><span class="divider">/</span></li>
  <li class="active">List</li>
</ul>


<table class="table  table-striped">
  <tr>
    <th>Title</th>
    <th>Positive</th>
    <th>Negative</th>
    <th>Created date</th>
    <th></th>
  </tr>

  <% @ideas.each do |idea| %>
  <tr>
    <td><%= idea.title %></td>
    <td><%= idea.positive %></td>
    <td><%= idea.negative %></td>
    <td><%= idea.created_date %></td>
    <td>
      <div class="btn-group">
        <%= link_to 'Show', idea, :class => 'btn' %>
        <%= link_to 'Edit', edit_idea_path(idea), :class => 'btn' %>
        <%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn' %>
      </div>
    </td>
  </tr>
  <% end %>
</table>

<%= link_to 'New Idea', new_idea_path, :class => 'btn btn-success' %>

