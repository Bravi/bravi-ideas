
<% @ideas.each_with_index do |idea, index| %>
	<% if (index == 0) || ((index) % 3 == 0) %>
	<div class="row-fluid">
	<% end %>

	<div class="span4">
		<div class="idea" data-idea="<%= idea.id %>" data-positive="<%= idea.percentPositive() %>" data-negative="<%= idea.percentNegative() %>">
			<div class="idea-content">
				<header>
					<!-- User logo -->
					<img class="img-polaroid user-img"  src="http://gravatar.com/avatar/2d62e386c079f824fe7f0c8e8e83128b?s=140" />
					<!-- Idea content -->
					<h3><a href="#"><%= idea.title %></a></h3>
				</header>

				<p><%= idea.description %></p>

				<div class="percentage-votes-values">
					<ul>
						<li>
							<i class="icon-thumbs-down"></i>
							<span class="amount-vote"><%= idea.negative %></span>
							<em class="amount-vote-percentage">(<%= idea.percentNegative() %>%)</em>
						</li>
						<li>
							<i class="icon-thumbs-up"></i>
							<span class="amount-vote"><%= idea.positive %></span>
							<em class="amount-vote-percentage">(<%= idea.percentPositive() %>%)</em>
						</li>
					</ul>
				</div>
			</div>
			<a href="#" class="percentage-votes-bar">
				<span class="percentage-vote btn-danger" style="width:<%= idea.percentNegative() %>%;" 
						data-toggle="tooltip" 
					 	data-placement="bottom" 
					 	data-original-title="<%= idea.percentNegative() %>%">
					<%= idea.percentNegative() %>
				</span>
				<span class="percentage-vote btn-success" style="width:<%= idea.percentPositive() %>%;" 
						data-toggle="tooltip" 
					 	data-placement="bottom" 
					 	data-original-title="<%= idea.percentPositive() %>%">
					<%= idea.percentPositive() %>
				</span>
			</a>
		</div>
	</div>

	<% if (index == @ideas.size - 1 ) || ((index + 1) % 3 == 0) %>
	</div>
	<div id="wrapper-full-idea">
		<div id="arrow"></div>
		<div id="full-idea" data-idea="<%= idea.id %>">
			<header>
				<!-- User logo -->
				<img class="img-polaroid user-img"  src="http://gravatar.com/avatar/2d62e386c079f824fe7f0c8e8e83128b?s=140" />
				<!-- Idea content -->
				<h3><%= idea.title %></h3>
			</header>

			<div class="idea-description"><%= idea.description %></div>

			
			<div class="do-you-like-bar">
				<span>Do you like?</span>

				<!-- Buttons thumbs -->
				<a class="idea-like btn btn-success button-thumbs" href="#"
					data-toggle="tooltip" 
					data-placement="bottom" 
					data-original-title="Yep, nice idea!">
					<i class="icon-thumbs-up"> <%= idea.positive %></i>
				</a>
				<a class="idea-unlike btn btn-danger button-thumbs" href="#"
					data-toggle="tooltip" 
					data-placement="bottom" 
					data-original-title="Nope, bad idea!">
					<i class="icon-thumbs-down"> <%= idea.negative %></i>
				</a>

				<a href="" class="btn-comments"
					data-toggle="tooltip" 
					data-placement="bottom" 
					data-original-title="I would like comment about it.">
					<i class="icon-comments-alt"></i> Comments
				</a>
			</div>

			<div class="group-comments">
				<div class="comment">
					<!-- <a class="btn btn-success btn-mini button-thumbs disabled" href="#" disabled>
						<i class="icon-thumbs-up"></i>
					</a> -->
					<img class="img-polaroid user-img"  src="http://gravatar.com/avatar/2d62e386c079f824fe7f0c8e8e83128b?s=140" />
					<p>I liked. We should try it.</p>
					<div class="clear"></div>
				</div>


				<div class="comment">
					<!-- <a class="btn btn-danger btn-mini button-thumbs disabled" href="#" disabled>
						<i class="icon-thumbs-down"></i>
					</a> -->
					<img class="img-polaroid user-img"  src="http://gravatar.com/avatar/2d62e386c079f824fe7f0c8e8e83128b?s=140" />
					<p>I don't know. Japanese is too hard.</p>
					<div class="clear"></div>
				</div>

				<div class="new-comment">
					<h4>What do you think?</h4>
					<textarea placeholder="I think..."></textarea>
					<br>
					<a class="idea-unlike btn btn-primary btn-small" href="#">
						<i class="icon-comment-alt"> Comment</i>
					</a>
				</div>
			</div>
		</div>
	</div>
	<% end %>
<% end %>
